{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", 120],
    "no-console": "off",
    "prefer-arrow-callback": "off",
    "no-plusplus": "off",
    "linebreak-style": "off",
    "func-names": "off",
    "no-restricted-syntax": "off",
    "no-return-assign": "off",
    "no-param-reassign": "off",
    "arrow-parens": "off"
  },
  "globals": {
    "_": true
  }
}
